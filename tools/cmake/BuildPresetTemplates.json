{
	"version": 4,
	"buildPresets": [
		{
			"name": "condition-linux",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Linux"
			}
		},
		{
			"name": "condition-linux-ci",
			"hidden": true,
			"condition": {
				"type": "allOf",
				"conditions": [
					{
						"type": "equals",
						"lhs": "${hostSystemName}",
						"rhs": "Linux"
					},
					{
						"type": "equals",
						"lhs": "$penv{CI}",
						"rhs": "true"
					}
				]
			}
		},
		{
			"name": "condition-macos",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Darwin"
			}
		},
		{
			"name": "condition-macos-ci",
			"hidden": true,
			"condition": {
				"type": "allOf",
				"conditions": [
					{
						"type": "equals",
						"lhs": "${hostSystemName}",
						"rhs": "Darwin"
					},
					{
						"type": "equals",
						"lhs": "$penv{CI}",
						"rhs": "true"
					}
				]
			}
		},
		{
			"name": "condition-windows",
			"hidden": true,
			"condition": {
				"type": "equals",
				"lhs": "${hostSystemName}",
				"rhs": "Windows"
			}
		},
		{
			"name": "condition-windows-ci",
			"hidden": true,
			"condition": {
				"type": "allOf",
				"conditions": [
					{
						"type": "equals",
						"lhs": "${hostSystemName}",
						"rhs": "Windows"
					},
					{
						"type": "equals",
						"lhs": "$penv{CI}",
						"rhs": "true"
					}
				]
			}
		}
	]
}
